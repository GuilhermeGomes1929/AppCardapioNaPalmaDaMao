<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp">

        <include
            layout="@layout/menuappbar"/>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_nav"
        />






    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:id="@+id/calories_card"
                android:layout_width="386dp"
                android:layout_height="240dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:contentPadding="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.64"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.148">

                <TextView
                    android:id="@+id/calories_counter"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="95dp"

                    android:gravity="center_horizontal"
                    android:text="2 L"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/calories_title"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="145dp"
                    android:gravity="center"

                    android:text="Água"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title_consumidas"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:gravity="center"

                    android:text="Falta"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/expended_counter"
                    android:layout_width="80dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="80dp"

                    android:gravity="center"
                    android:text="1,6 L"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title_gastas"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="296dp"
                    android:layout_marginTop="70dp"
                    android:gravity="center_horizontal"

                    android:text="Copo"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eatten_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="296dp"
                    android:layout_marginTop="80dp"

                    android:gravity="center"
                    android:text="300 kcal"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/water_progress_bar"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"

                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/circle"
                    android:rotation="135" />

                <ProgressBar
                    android:id="@+id/water_progress"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="20dp"

                    android:indeterminateOnly="false"
                    android:progressDrawable="@drawable/progress_circle"
                    android:rotation="135" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/ic_baseline_add_24"
                    android:backgroundTint="@color/preto"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="311dp"
                    android:layout_marginTop="120dp"
                    android:background="@drawable/ic_baseline_remove_24"
                    android:backgroundTint="@color/preto"/>


            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/refeicoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Lembretes"
                android:textColor="@color/titulos"

                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calories_card"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.v7.widget.CardView
                android:id="@+id/breakfast_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/refeicoes"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/breakfast_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/watch" />

                <TextView
                    android:id="@+id/breakfast_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="Editar lembretes"
                    android:textColor="@color/preto"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonExpand1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="320dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_baseline_expand_more_24"
                    android:elevation="4dp" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/contBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <Button
                        android:layout_width="290dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="70dp"
                        android:background="#00DF06E4"
                        android:gravity="start"
                        android:text="1 torrada"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <Button
                        android:layout_width="290dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="100dp"
                        android:background="#00DF06E4"
                        android:gravity="start"
                        android:text="1 iogurte"
                        android:textAlignment="viewStart"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Horários"
                android:textColor="@color/titulos"

                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calories_card"
                app:layout_constraintVertical_bias="0.0" />


            <android.support.v7.widget.CardView
                android:id="@+id/snack_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/breakfast_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/snack_icon"
                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/cup" />

                <TextView
                    android:id="@+id/snack_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="7:00"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonExpand2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="320dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_baseline_check_circle_outline_24"
                    android:backgroundTint="@color/preto"
                    android:elevation="4dp" />




            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/lunch_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/snack_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView

                    android:layout_width="50dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/cup" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="8:00"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button

                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="320dp"
                    android:layout_marginLeft="320dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_baseline_check_circle_outline_24"
                    android:backgroundTint="@color/preto"
                    android:elevation="4dp" />


            </android.support.v7.widget.CardView>






        </LinearLayout>
    </ScrollView>


</android.support.v4.widget.DrawerLayout>