<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuEdit"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp">

        <include
            layout="@layout/menuappbar"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textteste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Montagem do cardápio"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"/>
                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"

                        android:background="?android:attr/listDivider"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escolha a refeição"
                        android:textSize="19sp"
                        android:textColor="@color/preto"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"/>

                    <Spinner
                        android:id="@+id/spinner_time_to_eat"
                        android:layout_width="366dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escolha o grupo de alimento"
                        android:textSize="19sp"
                        android:textColor="@color/preto"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"/>

                    <Spinner
                        android:id="@+id/spinner_food_group"
                        android:layout_width="366dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Escolha o tipo de alimento e a quantidade"
                        android:textSize="19sp"
                        android:textColor="@color/preto"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="366dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spinner_food_amount"
                            android:layout_width="100dp"
                            android:layout_height="match_parent"/>
                        <Spinner
                            android:id="@+id/spinner_food_choose"
                            android:layout_width="256dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"/>


                    </LinearLayout>

                    <Button
                        android:id="@+id/add_food"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/colorPrimary"
                        android:onClick="salvar"
                        android:text="Adicionar"
                        android:textColor="#FFFFFF" />

                </LinearLayout>


            </android.support.v7.widget.CardView>


            <TextView
                android:id="@+id/refeicoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="Edição do cardápio"
                android:textColor="@color/titulos"

                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/calories_card"
                app:layout_constraintVertical_bias="0.0" />

            <android.support.v7.widget.CardView
                android:id="@+id/breakfast_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/refeicoes"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/breakfast_icon"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/breakfasticon" />

                <TextView
                    android:id="@+id/breakfast_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/break_fast_string"
                    android:textColor="@color/preto"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEdit1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:elevation="4dp" />

                <LinearLayout
                    android:id="@+id/contBreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="?android:attr/listDivider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ListView
                            android:id="@+id/list_breakfast"
                            android:layout_width="366dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/buttonDelete1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="326dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/ic_baseline_delete_24" />


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/snack_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/breakfast_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/snack_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="20dp"
                    app:srcCompat="@drawable/snackicon" />

                <TextView
                    android:id="@+id/snack_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/snack_string"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEdit2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:elevation="4dp" />

                <LinearLayout
                    android:id="@+id/contSnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="?android:attr/listDivider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ListView
                            android:id="@+id/list_snack"
                            android:layout_width="366dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/buttonDelete2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="326dp"
                            android:layout_marginBottom="10dp"/>


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/lunch_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/snack_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/lunch_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="30dp"
                    app:srcCompat="@drawable/lunchicon" />

                <TextView
                    android:id="@+id/lunch_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/lunch_string"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEdit3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:elevation="4dp" />

                <LinearLayout
                    android:id="@+id/contLunch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="?android:attr/listDivider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">



                        <ListView
                            android:id="@+id/list_lunch"
                            android:layout_width="366dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/buttonDelete3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="326dp"
                            android:layout_marginBottom="10dp"/>


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/afternoon_snack_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lunch_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/afternoon_snack_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="30dp"
                    app:srcCompat="@drawable/afternoonsnackicon" />

                <TextView
                    android:id="@+id/afternoon_snack_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/afternoon_snack_string"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEdit4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:elevation="4dp" />

                <LinearLayout
                    android:id="@+id/contAftersnack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="?android:attr/listDivider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">



                        <ListView
                            android:id="@+id/list_aftersnack"
                            android:layout_width="366dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/buttonDelete4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="326dp"
                            android:layout_marginBottom="10dp"/>


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/dinner_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/afternoon_snack_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/dinner_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="5dp"
                    app:srcCompat="@drawable/dinnericon" />

                <TextView
                    android:id="@+id/dinner_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/dinner_string"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEdit5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:elevation="4dp" />

                <LinearLayout
                    android:id="@+id/contDinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="?android:attr/listDivider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ListView
                            android:id="@+id/list_dinner"
                            android:layout_width="366dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/buttonDelete5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="326dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/supper_card"
                android:layout_width="386dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="140dp"
                app:cardBackgroundColor="@color/colorSecundary"
                app:cardCornerRadius="8dp"
                app:cardElevation="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dinner_card"
                app:layout_constraintVertical_bias="0.0">

                <ImageView
                    android:id="@+id/supper_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginBottom="30dp"
                    app:srcCompat="@drawable/suupericon" />

                <TextView
                    android:id="@+id/supper_title"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/supper_string"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonEdit6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="330dp"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/ic_baseline_edit_24"
                    android:elevation="4dp" />

                <LinearLayout
                    android:id="@+id/contSupper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <View
                        android:layout_width="366dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:background="?android:attr/listDivider"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <ListView
                            android:id="@+id/list_supper"
                            android:layout_width="366dp"
                            android:layout_height="300dp"
                            android:layout_marginLeft="10dp"/>

                        <Button
                            android:id="@+id/buttonDelete6"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_delete_24"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="326dp"
                            android:layout_marginBottom="10dp"/>


                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>





</android.support.v4.widget.DrawerLayout>