<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.GetInfos"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp">

        <include
            layout="@layout/menuappbar"/>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_baseline_person_24"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="110dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="32dp">
                    <TextView
                        android:id="@+id/nome_perfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luis Guilherme"
                        android:textSize="24sp"
                        android:textColor="#FFFFFF"
                        />

                    <Button
                        android:id="@+id/edit_perfil"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/ic_baseline_edit_24_white"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/altura_idade_perfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.71 m / 17 anos"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"/>




            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/colorSecundary">


                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Meu peso"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peso atual"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/peso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:hint="Ex.: 63.5 kg"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meta"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/meta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:hint="Ex.: 50 kg"
                    android:textSize="24sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taxa de gordural corporal"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/bf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="0dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:hint="Ex.: 16 %"
                    android:textSize="24sp"/>




            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="0dp"
            app:cardCornerRadius="10dp"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorSecundary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minhas medidas"
                        android:textSize="28sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>


                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ombros"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <EditText
                    android:id="@+id/ombros"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Ex.: 110cm"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Peitoral"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/peitoral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Ex.: 100cm"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Braço esquerdo e direito"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/bracoE"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Ex.: 24cm"
                        android:textSize="24sp"/>
                    <EditText
                        android:id="@+id/bracoD"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Ex.: 24cm"
                        android:textSize="24sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cintura"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>


                <EditText
                    android:id="@+id/cintura"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Ex.: 80cm"
                    android:textSize="24sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quadril"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>
                <EditText
                    android:id="@+id/quadril"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="Ex.: 100cm"
                    android:textSize="24sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perna esquerda e direita"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/pernaE"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Ex.: 80cm"
                        android:textSize="24sp"/>
                    <EditText
                        android:id="@+id/pernaD"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Ex.: 80cm"
                        android:textSize="24sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="panturrilha esquerda e direita"
                    android:textSize="24sp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">
                    <EditText
                        android:id="@+id/panturrilhaE"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Ex.: 30cm"
                        android:textSize="24sp"/>
                    <EditText
                        android:id="@+id/panturrilhaD"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Ex.: 30cm"
                        android:textSize="24sp"/>

                </LinearLayout>




            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/salvar_infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar informações"
            android:textSize="24sp"
            android:background="@color/colorSecundaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/edit_infos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar informações"
            android:textSize="24sp"
            android:background="@color/colorSecundaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="200dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


    </ScrollView>

</android.support.v4.widget.DrawerLayout>