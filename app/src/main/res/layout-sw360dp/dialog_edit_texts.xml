<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/colorPrimaryLight"
    android:id="@+id/dialog_edit_texts_layout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar perfil"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sexo"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"/>
    <Spinner
        android:id="@+id/spinner_sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/nome_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex.: Laura Gabriela"
        android:inputType="text"
        android:textColorHint="#C3FFFFFF"
        android:textSize="24sp"
        android:textColor="#FFFFFF"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Altura"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/altura_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex.: 1.56"
        android:textColor="#FFFFFF"
        android:textColorHint="#C3FFFFFF"
        android:textSize="24sp"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Idade"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:id="@+id/idade_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ex.: 17"
        android:textColor="#FFFFFF"
        android:textColorHint="#C3FFFFFF"
        android:textSize="24sp"
        android:inputType="number"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Cancelar"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"/>

        <Button
            android:id="@+id/confirm_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Confirmar"
            android:textSize="17sp"
            android:textColor="#FFFFFF"
            android:background="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

</LinearLayout>